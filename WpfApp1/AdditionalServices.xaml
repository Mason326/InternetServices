<Window x:Class="WpfApp1.AdditionalServices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window10" Height="586.4" Width="724.8" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded" >
    <Grid>
        <TextBox TabIndex="1" x:Name="serviceTextBox" HorizontalAlignment="Left" Height="77" Margin="488,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" PreviewTextInput="serviceTextBox_PreviewTextInput"/>
        <Label Content="Услуга" HorizontalAlignment="Left" Margin="484,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <Label Content="Оплата за месяц" HorizontalAlignment="Left" Margin="484,144,0,0" VerticalAlignment="Top"/>
        <DataGrid IsReadOnly="True" SelectionMode="Single" x:Name="addServicesDG" HorizontalAlignment="Left" Height="485" Margin="10,27,0,0" VerticalAlignment="Top" Width="437" AutoGenerateColumns="False" SelectionChanged="addServicesDG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding additional_service_name}" Width="295" />
                <DataGridTextColumn Header="Ежемесячные выплаты" Binding="{Binding monthly_fee}" Width="150" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox CommandManager.PreviewExecuted="TextBox_PreviewExecuted" TabIndex="2" x:Name="monthFee" HorizontalAlignment="Left" Height="30" Margin="488,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" MaxLength="12"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="521,26,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="576,143,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <StackPanel HorizontalAlignment="Left" Height="237" Margin="472,275,0,0" VerticalAlignment="Top" Width="236">
            <Button x:Name="addServiceButton" Content="Добавить услугу" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="220" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="Button_Click_1"/>
            <Button x:Name="editServiceButton" Content="Редактировать услугу" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="220" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="editServiceButton_Click"/>
            <Button x:Name="deleteServiceButton" Content="Удалить услугу" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="220" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="deleteServiceButton_Click"/>
            <Button x:Name="toMainButton" Content="На главную" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="220" Height="31" Click="Button_Click" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="endEditButton" Visibility="Collapsed" Content="Завершить редактирование" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="220" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="endEditButton_Click"/>
            <Button x:Name="cancelEditButton" Visibility="Collapsed" Content="Отменить изменения" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="220" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="cancelEditButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
