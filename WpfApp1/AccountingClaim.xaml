<Window x:Class="WpfApp1.AccountingClaim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Учет заявок" Height="588.2" Width="996.8" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <DataGrid IsReadOnly="True" x:Name="claimsDG" Margin="13,268,10.4,52.6" AutoGenerateColumns="False" SelectionChanged="claimsDG_SelectionChanged">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Просмотр" Click="Button_Click_1" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ Заявки" Binding="{Binding id_claim}" Width="70" />
                <DataGridTextColumn Header="Дата создания" Binding="{Binding connection_creationDate, StringFormat=\{0:dd.MM.yy\}}" Width="120" />
                <DataGridTextColumn Header="Дата выполнения" Binding="{Binding mount_date, StringFormat=\{0:dd.MM.yy HH:mm:ss\}}" Width="120" />
                <DataGridTextColumn Header="Адрес монтирования" Binding="{Binding connection_address}" Width="140" />
                <DataGridTextColumn Header="Тариф" Binding="{Binding tariff}" Width="120" />
                <DataGridTextColumn Header="Фио Клиента" Binding="{Binding client_fio}" Width="120" />
                <DataGridTextColumn Header="ФИО менеджера" Binding="{Binding employee_fio}" Width="120" />
                <DataGridTextColumn Header="Статус" Binding="{Binding claim_status}" Width="95">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="Входящая">
                                    <Setter Property="Background" Value="ForestGreen" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                                <Trigger Property="Text"  Value="Отменена">
                                    <Setter Property="Background" Value="DarkRed" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                                <Trigger Property="Text"  Value="В работе">
                                    <Setter Property="Background" Value="Coral" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                                <Trigger Property="Text"  Value="Закрыта">
                                    <Setter Property="Background" Value="Magenta"  />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Поиск по номеру заявки и ФИО" HorizontalAlignment="Left" Margin="26,17,0,0" VerticalAlignment="Top" FontSize="16" Height="30" Width="260"/>
        <TextBox x:Name="searchByContractNumAndFio" HorizontalAlignment="Left" Height="36" Margin="28,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="391" TextChanged="searchByContractNumAndFio_TextChanged" PreviewTextInput="searchByContractNumAndFio_PreviewTextInput"/>
        <GroupBox Header="Фильтр по статусу" HorizontalAlignment="Left" Height="155" Margin="28,95,0,0" VerticalAlignment="Top" Width="162" FontSize="16">
            <StackPanel HorizontalAlignment="Left" Height="134" Margin="0,0,-2.2,-7.6" VerticalAlignment="Top" Width="147">
                <RadioButton x:Name="allStatuses" Content="Все" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,10,0.0,0" Checked="FilterByStatus_Checked"/>
                <RadioButton x:Name="incoming" Content="Входящие" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,5,0.0,0" Checked="FilterByStatus_Checked"/>
                <RadioButton x:Name="inProgress" Content="В работе" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,5,0.0,0" Checked="FilterByStatus_Checked"/>
                <RadioButton x:Name="closed" Content="Закрыта" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,5,0.0,0" Checked="FilterByStatus_Checked"/>
                <RadioButton x:Name="canceled" Content="Отменена" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,5,0.0,0" Checked="FilterByStatus_Checked"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Фильтр по дате создания" HorizontalAlignment="Left" Height="134" Margin="201,96,0,0" VerticalAlignment="Top" Width="212" FontSize="16">
            <StackPanel>
                <DockPanel Margin="0,5,0,0">
                    <Label Content="С"/>
                    <DatePicker x:Name="fromDate" Margin="10,0,0,0" SelectedDateChanged="dates_SelectedDateChanged" PreviewTextInput="Dates_PreviewTextInput"/>
                </DockPanel>
                <DockPanel Margin="0,10,0,0">
                    <Label Content="По"/>
                    <DatePicker x:Name="toDate" SelectedDateChanged="dates_SelectedDateChanged" PreviewTextInput="Dates_PreviewTextInput"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <Button Content="Очистить фильтры и поиск" HorizontalAlignment="Left" Margin="434,51,0,0" VerticalAlignment="Top" Width="243" Height="32" Click="Button_Click_3" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold"/>
        <Label Content="Количество записей:" HorizontalAlignment="Left" Margin="13,534,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16"/>
        <Label x:Name="recordsCountLabel" Content="" HorizontalAlignment="Left" Margin="177,534,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16" FontWeight="Bold"/>
        <StackPanel HorizontalAlignment="Left" Height="212" Margin="699,38,0,0" VerticalAlignment="Top" Width="267">
            <Button x:Name="showClaimButton" IsEnabled="False" Content="Просмотр заявки" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top" Width="267" Height="33" Click="Button_Click_1" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontWeight="Bold" FontSize="16"/>
            <Button x:Name="printClaimButton" Content="Печать заявки" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top" Width="267" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontWeight="Bold" FontSize="16"/>
            <Button x:Name="orderButton" Content="Заказ-наряд" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top" Width="267" Height="33" Click="Button_Click_2" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontWeight="Bold" FontSize="16"/>
            <Button Content="На главную" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top" Width="267" Height="31" Click="Button_Click" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontWeight="Bold" FontSize="16"/>
        </StackPanel>

    </Grid>
</Window>
