                <Button x:Name="deleteMaterialButton" Content="Удалить материал" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="210" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16"/>
                <Button x:Name="toMainButton" Content="На главную" HorizontalAlignment="Left" Margin="0,85,0,0" VerticalAlignment="Top" Width="210" Height="31" Click="Button_Click" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16"/>
