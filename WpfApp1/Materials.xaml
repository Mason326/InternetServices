                <Button x:Name="cancelEditButton" Content="Отменить изменения" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="210" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16" Click="cancelEditButton_Click"/>
