        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window13" Height="508.7" Width="718.4" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="486,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
        <Label Content="Материал" HorizontalAlignment="Left" Margin="486,28,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="486,138,0,0" VerticalAlignment="Top"/>
        <Label Content="Единицы измерения" HorizontalAlignment="Left" Margin="486,80,0,0" VerticalAlignment="Top"/>
        <DataGrid IsReadOnly="True" SelectionMode="Single" x:Name="materialsDG" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="428" Margin="14,19,0,0" VerticalAlignment="Top" Width="437" SelectionChanged="materialsDG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Материал" Binding="{Binding material_name}" Width="70" />
                <DataGridTextColumn Header="Единицы измерения" Binding="{Binding units}" Width="150" />
                <DataGridTextColumn Header="Цена" Binding="{Binding cost}" Width="70" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="486,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="486,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="486,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
