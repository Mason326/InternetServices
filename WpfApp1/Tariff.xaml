<Window x:Class="WpfApp1.Tariff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window12" Height="598.8" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Название тарифа" HorizontalAlignment="Left" Margin="514,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <Label Content="Ежемесячная плата" HorizontalAlignment="Left" Margin="514,252,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="514,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
        <Label Content="" HorizontalAlignment="Left" Margin="514,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <DataGrid IsReadOnly="True" SelectionMode="Single" x:Name="tariffDG" HorizontalAlignment="Left" AutoGenerateColumns="False" Height="497" Margin="36,35,0,0" VerticalAlignment="Top" Width="437" SelectionChanged="tariffDG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название тарифа" Binding="{Binding tariff_name}" Width="110" />
                <DataGridTextColumn Header="Описание тарифа" Binding="{Binding tariff_details}" Width="150" />
                <DataGridTextColumn Header="Ежемесячные выплаты" Binding="{Binding monthly_fee}" Width="140" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox CommandManager.PreviewExecuted="TextBox_PreviewExecuted" TabIndex="3" x:Name="monthFeeTextBox" HorizontalAlignment="Left" Height="30" Margin="514,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" PreviewTextInput="TextBox_PreviewTextInput_2" PreviewKeyDown="TextBox_PreviewKeyDown" MaxLength="12"/>
        <Label Content="" HorizontalAlignment="Left" Margin="514,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>

        <TextBox TabIndex="1" x:Name="tariffNameTextBox" HorizontalAlignment="Left" Height="58" Margin="514,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Label Content="Описание тарифа" HorizontalAlignment="Left" Margin="514,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <TextBox TabIndex="2" x:Name="tariffDescriptionTextBox" HorizontalAlignment="Left" Height="91" Margin="514,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" PreviewTextInput="TextBox_PreviewTextInput_1"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="609,37,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="612,130,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="622,251,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <StackPanel HorizontalAlignment="Left" Height="206" Margin="514,326,0,0" VerticalAlignment="Top" Width="246">
            <Button x:Name="addTariffButton" Content="Добавить тариф" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="246" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16" Click="Button_Click_1"/>
            <Button x:Name="editTariffButton" Content="Редактировать тариф" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="246" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16" Click="editTariffButton_Click"/>
            <Button x:Name="deleteTariffButton" Content="Удалить тариф" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="246" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16" Click="deleteTariffButton_Click"/>
            <Button x:Name="toMainButton" Content="На главную" HorizontalAlignment="Left" Margin="0,60,0,0" VerticalAlignment="Top" Width="246" Height="31" Click="Button_Click" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" Foreground="White" FontWeight="Bold"/>
            <Button Visibility="Collapsed" x:Name="endEditButton" Content="Завершить редактирование" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="246" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16" Click="endEditButton_Click"/>
            <Button Visibility="Collapsed" x:Name="cancelEditButton" Content="Отменить изменения" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="246" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16" Click="cancelEditButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
