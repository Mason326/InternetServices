<Window x:Class="WpfApp1.Tariff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window12" Height="598.8" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Название тарифа" HorizontalAlignment="Left" Margin="514,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <Label Content="Ежемесячная плата" HorizontalAlignment="Left" Margin="514,252,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="514,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
        <Button Content="Создать тариф" HorizontalAlignment="Left" Margin="514,326,0,0" VerticalAlignment="Top" Width="210" Height="31"/>
        <Label Content="" HorizontalAlignment="Left" Margin="514,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <Button Content="На главную" HorizontalAlignment="Left" Margin="514,501,0,0" VerticalAlignment="Top" Width="210" Height="31"/>
        <Button Content="Редактировать тариф" HorizontalAlignment="Left" Margin="514,378,0,0" VerticalAlignment="Top" Width="246" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16"/>
        <DataGrid x:Name="tariffDG" HorizontalAlignment="Left" AutoGenerateColumns="False" Height="497" Margin="36,35,0,0" VerticalAlignment="Top" Width="437">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название тарифа" Binding="{Binding tariff_name}" Width="110" />
                <DataGridTextColumn Header="Описание тарифа" Binding="{Binding tariff_details}" Width="150" />
                <DataGridTextColumn Header="Ежемесячные выплаты" Binding="{Binding monthly_fee}" Width="140" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="monthFee" HorizontalAlignment="Left" Height="30" Margin="514,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" PreviewTextInput="TextBox_PreviewTextInput_2" PreviewKeyDown="TextBox_PreviewKeyDown"/>
        <Button Content="Добавить тариф" HorizontalAlignment="Left" Margin="514,326,0,0" VerticalAlignment="Top" Width="246" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16"/>
        <Label Content="" HorizontalAlignment="Left" Margin="514,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <Button Content="На главную" HorizontalAlignment="Left" Margin="514,501,0,0" VerticalAlignment="Top" Width="246" Height="31" Click="Button_Click" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" Foreground="White" FontWeight="Bold"/>

        <Button Content="Удалить тариф" HorizontalAlignment="Left" Margin="514,434,0,0" VerticalAlignment="Top" Width="246" Height="31" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Height="58" Margin="514,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Label Content="Описание тарифа" HorizontalAlignment="Left" Margin="514,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <TextBox HorizontalAlignment="Left" Height="91" Margin="514,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" PreviewTextInput="TextBox_PreviewTextInput_1"/>
    </Grid>
</Window>
