<Window x:Class="WpfApp1.AccountingContract"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Учет договоров" Height="438.104" Width="987.2" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="showContractVerbose" Content="Просмотр договора" HorizontalAlignment="Left" Height="36" Margin="727,32,0,0" VerticalAlignment="Top" Width="226" RenderTransformOrigin="0.458,-0.148" Click="Button_Click" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold"/>
        <DataGrid IsReadOnly="True" x:Name="contractsDG" Margin="10,195,9.8,9.8" AutoGenerateColumns="False" CanUserAddRows="False" SelectionChanged="contractsDG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ Договора" Binding="{Binding idcontract}" Width="100" />
                <DataGridTextColumn Header="№ Заявки" Binding="{Binding connection_claim_id}" Width="100" />
                <DataGridTextColumn Header="ФИО Клиента" Binding="{Binding client}" Width="100" />
                <DataGridTextColumn Header="Тариф" Binding="{Binding tariff}" Width="110" />
                <DataGridTextColumn Header="Адрес" Binding="{Binding connection_address}" Width="90" />
                <DataGridTextColumn Header="Статус" Binding="{Binding status}" Width="120" />
                <DataGridTextColumn Header="Дата заключения" Binding="{Binding contract_date, StringFormat=\{0:dd.MM.yyyy\}}" Width="120" />
                <DataGridTextColumn Header="Дата заявки" Binding="{Binding claimDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="120" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="На главную" HorizontalAlignment="Left" Height="36" Margin="727,101,0,0" VerticalAlignment="Top" Width="226" RenderTransformOrigin="0.458,-0.148" Click="Button_Click_1" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold"/>
        <GroupBox Header="Фильтр по статусу" HorizontalAlignment="Left" Height="123" Margin="297,14,0,0" VerticalAlignment="Top" Width="162" FontSize="16">
            <StackPanel HorizontalAlignment="Left" Height="89" VerticalAlignment="Top" Width="147">
                <RadioButton x:Name="allContracts" Content="Все" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,15,0,0" Checked="FilterByStatus_Checked"/>
                <RadioButton x:Name="currentContracts" Content="Заключен" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,5,0,0" Checked="FilterByStatus_Checked"/>
                <RadioButton x:Name="terminatedContracts" Content="Расторгнут" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,5,0,0" Checked="FilterByStatus_Checked"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Фильтр по дате заключения" HorizontalAlignment="Left" Height="121" Margin="36,0,0,0" VerticalAlignment="Top" Width="231" FontSize="16">
            <StackPanel Margin="0,0,0.2,14.6">
                <DockPanel Margin="0,5,0,0">
                    <Label Content="С"/>
                    <DatePicker Margin="10,0,0,0" Name="fromDate" Width="189" SelectedDateChanged="dates_SelectedDateChanged" PreviewTextInput="Dates_PreviewTextInput"/>
                </DockPanel>
                <DockPanel Margin="0,10,0,0">
                    <Label Content="По"/>
                    <DatePicker Name="toDate" SelectedDateChanged="dates_SelectedDateChanged" PreviewTextInput="Dates_PreviewTextInput"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <Label Content="Поиск по номеру договора и ФИО" HorizontalAlignment="Left" Margin="8,120,0,0" VerticalAlignment="Top" FontSize="16" Height="30" Width="291"/>
        <TextBox x:Name="searchByContractNumAndFio" HorizontalAlignment="Left" Height="36" Margin="10,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="421" TextChanged="searchByContractNumAndFio_TextChanged" PreviewTextInput="searchByContractNumAndFio_PreviewTextInput"/>
        <GroupBox Header="Сортировка по номеру&#xD;&#xA;договора" HorizontalAlignment="Left" Height="123" Margin="503,14,0,0" VerticalAlignment="Top" Width="192" FontSize="16">
            <StackPanel HorizontalAlignment="Left" Height="81" VerticalAlignment="Top" Width="147" Margin="0,0,0,-7.4">
                <RadioButton x:Name="noSort" Content="Отсутствует" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,10,0.0,0" Checked="SortByContractNumber_Checked"/>
                <RadioButton x:Name="asc" Content="По возрастанию" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,5,0.0,0" Checked="SortByContractNumber_Checked"/>
                <RadioButton x:Name="desc" Content="По убыванию" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="10,5,0.0,0" Checked="SortByContractNumber_Checked"/>
            </StackPanel>
        </GroupBox>
        <Button Content="Очистить фильтры и поиск" HorizontalAlignment="Left" Margin="453,150,0,0" VerticalAlignment="Top" Width="242" Height="36" FontFamily="Arial" FontSize="16" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" Click="Button_Click_2"/>

    </Grid>
</Window>
