<Window x:Class="WpfApp1.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Заказ-наряд" Height="673.4" Width="1267.6" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <GroupBox Header="Заявка" HorizontalAlignment="Left" Height="381" Margin="40,56,0,0" VerticalAlignment="Top" Width="373" FontSize="16">
            <StackPanel HorizontalAlignment="Left" Height="344" Margin="10,10,-2.2,-1.2" VerticalAlignment="Top" Width="353">
                <DockPanel>
                    <Label Content="Номер заявки:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="115"/>
                    <Label x:Name="numberClaimLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Дата создания:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="122"/>
                    <Label x:Name="creationDateLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Дата выполнения:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="144"/>
                    <Label x:Name="executionDateLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Клиент:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="66"/>
                    <Label x:Name="clientLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31"/>
                </DockPanel>
                <StackPanel HorizontalAlignment="Left">
                    <Label Content="Адрес монтирования" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="171"/>
                    <TextBox x:Name="mountAddressTextBox" Height="95" Width="259" AcceptsReturn="False" Margin="5,0,0,0" TextWrapping="Wrap"/>
                </StackPanel>
                <DockPanel>
                    <Label Content="Тариф:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="59"/>
                    <Label x:Name="tariffLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Менеджер:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="92"/>
                    <Label x:Name="managerLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Статус:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="60"/>
                    <Label x:Name="statusLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <Label Content="Номер заказ-наряда:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="163" Margin="40,23,0,0"/>
        <Label x:Name="numberOrderLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="205,23,0,0"/>
        <Label Content="Поиск услуги" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="256" Margin="429,33,0,0"/>
        <DataGrid SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False" x:Name="servicesDG" HorizontalAlignment="Left" Height="119" Margin="429,97,0,0" VerticalAlignment="Top" Width="403">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding service_name}" Width="252"/>
                <DataGridTextColumn Header="Единицы измерения" Binding="{Binding units}" Width="60"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding service_cost}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="searchServiceTextBox" HorizontalAlignment="Left" Height="23" Margin="429,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" KeyUp="searchTextBox_KeyUp"/>
        <DataGrid SelectionMode="Single" x:Name="orderServiceDG" IsReadOnly="True" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="119" Margin="891,97,0,0" VerticalAlignment="Top" Width="328">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding service_name}" Width="240"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding count}" Width="75"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Закрытие наряда" HorizontalAlignment="Left" Margin="959,435,0,0" VerticalAlignment="Top" Width="206" Height="38" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White"/>
        <Label Content="Стоимость наряда: XXXX руб." HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="225" Margin="959,625,0,0"/>
        <DataGrid SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False" x:Name="additionalServicesDG" HorizontalAlignment="Left" Height="130" Margin="429,283,0,0" VerticalAlignment="Top" Width="403">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding additional_service_name}" Width="280"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding monthly_fee}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False" x:Name="materialsDG" HorizontalAlignment="Left" Height="130" Margin="41,509,0,0" VerticalAlignment="Top" Width="388">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Материал" Binding="{Binding material_name}" Width="220"/>
                <DataGridTextColumn Header="Единицы измерения" Binding="{Binding units}" Width="60"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding cost}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="orderMaterials" SelectionMode="Single" HorizontalAlignment="Left" Height="130" Margin="492,509,0,0" VerticalAlignment="Top" Width="388">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding material_name}" Width="240"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding count}" Width="75"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Услуги наряда" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="256" Margin="891,64,0,0"/>
        <DataGrid x:Name="orderAddServiceDG" SelectionMode="Single" HorizontalAlignment="Left" Height="130" Margin="891,283,0,0" VerticalAlignment="Top" Width="328">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding additional_service_name}" Width="240"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding count}" Width="75"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Поиск доп. услуги" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="256" Margin="429,220,0,0"/>
        <TextBox x:Name="searchAddServiceTextBox" HorizontalAlignment="Left" Height="23" Margin="429,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" KeyUp="searchTextBox_KeyUp"/>
        <Label Content="Доп. услуги наряда" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="256" Margin="891,243,0,0"/>
        <Label Content="Поиск материала" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="256" Margin="41,446,0,0"/>
        <TextBox x:Name="searchMaterialTextBox" HorizontalAlignment="Left" Height="23" Margin="41,477,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" KeyUp="searchTextBox_KeyUp"/>
        <Label Content="Материалы наряда" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="156" Margin="492,473,0,0"/>
        <Label Content="Стоимость скидки: XXXX руб." HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="225" Margin="959,597,0,0"/>
        <CheckBox Content="Скидка пенсионерам" HorizontalAlignment="Left" Margin="959,580,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button Content="К заявкам" HorizontalAlignment="Left" Margin="959,531,0,0" VerticalAlignment="Top" Width="206" Height="38" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Click="Button_Click"/>
        <Button Content="Распечатать акт" HorizontalAlignment="Left" Margin="959,485,0,0" VerticalAlignment="Top" Width="206" Height="37" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White"/>
        <Button Content="&gt;" HorizontalAlignment="Left" Margin="841,128,0,0" VerticalAlignment="Top" Width="42" FontSize="16" Background="{x:Null}" Click="Button_Click_1"/>
        <Button Content="&lt;" HorizontalAlignment="Left" Margin="841,164,0,0" VerticalAlignment="Top" Width="42" FontSize="16" Background="{x:Null}" Click="Button_Click_4"/>
        <Button Content="&gt;" HorizontalAlignment="Left" Margin="841,322,0,0" VerticalAlignment="Top" Width="42" FontSize="16" Background="{x:Null}" Click="Button_Click_2"/>
        <Button Content="&lt;" HorizontalAlignment="Left" Margin="841,358,0,0" VerticalAlignment="Top" Width="42" FontSize="16" Background="{x:Null}"/>
        <Button Content="&gt;" HorizontalAlignment="Left" Margin="439,545,0,0" VerticalAlignment="Top" Width="42" FontSize="16" Background="{x:Null}" Click="Button_Click_3"/>
        <Button Content="&lt;" HorizontalAlignment="Left" Margin="439,581,0,0" VerticalAlignment="Top" Width="42" FontSize="16" Background="{x:Null}"/>
    </Grid>
</Window>
