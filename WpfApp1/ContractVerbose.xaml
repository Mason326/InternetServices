<Window x:Class="WpfApp1.ContractVerbose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ContractVerbose" Height="375.6" Width="682" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid Margin="0,0,16.8,0">
        <GroupBox x:Name="ContractGroupBox" Header="Договор № " HorizontalAlignment="Left" Height="304" Margin="38,27,0,0" VerticalAlignment="Top" Width="398" FontSize="16" FontFamily="Arial">
            <StackPanel Margin="0,0,15,0">
                <DockPanel  Margin="0,20,0,0">
                    <Label Name="ClaimNumberLabel" Content= "Заявка № " HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label Name="ClaimDateLabel"  Content="от " />
                </DockPanel>
                <Label Name="TariffNameLabel" Content= "Тариф: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                <Label Name="ClientLabel" Content="Клиент: " HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
                <DockPanel  Margin="0,16,10,5">
                    <Label Name="AddressLabel" Content="Адрес: " HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox x:Name="AddressTextBox" TextWrapping="Wrap" Margin="0,0,55,0" AcceptsReturn="True" Height="100" IsReadOnly="True" BorderBrush="White" Width="290" />
                </DockPanel>
                <DockPanel>
                    <Label Content="Статус: " />
                    <ComboBox x:Name="statusComboBox"  Width="230" Margin="0,0,65,0" />
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <Button Content="К договорам" HorizontalAlignment="Left" Margin="453,96,0,0" VerticalAlignment="Top" Width="185" Click="Button_Click" Height="32" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="saveChangesButton" Content="Сохранить изменения" HorizontalAlignment="Left" Margin="453,38,0,0" VerticalAlignment="Top" Width="185" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontWeight="Bold" FontSize="16" Click="Button_Click_1"/>

    </Grid>
</Window>
