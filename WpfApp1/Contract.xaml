<Window x:Class="WpfApp1.Contract"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Договор" Height="499" Width="865.6" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <GroupBox Header="Заявка" HorizontalAlignment="Left" Height="328" Margin="40,114,0,0" VerticalAlignment="Top" Width="470" FontSize="16">
            <StackPanel HorizontalAlignment="Left" Height="283" Margin="10,10,-10.6,0" VerticalAlignment="Top" Width="459">
                <DockPanel Margin="0,0,10.2,0">
                    <Label Content="Номер заявки:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="117"/>
                    <Label x:Name="claimNumberLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="5,0,0,0"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Дата создания:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="118"/>
                    <Label x:Name="claimСreationDateLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="5,0,0,0"/>
                </DockPanel>
                <DockPanel Margin="0,0,0.2,0">
                    <Label Content="Дата выполнения:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="144"/>
                    <Label x:Name="claimExecutionDateLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="5,0,0,0"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Клиент:" HorizontalAlignment="Left" Margin="0,0,-7.4,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="66"/>
                    <Label x:Name="claimClientLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="8,0,0,0"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Адрес монтирования:" HorizontalAlignment="Left" Margin="0,0,0.4,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="170"/>
                    <TextBox IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" x:Name="claimAddressTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="79" Margin="5,0,0,0" Width="272"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Менеджер:" HorizontalAlignment="Left" Margin="0,0,0.4,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="95"/>
                    <Label x:Name="claimManagerLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="5,0,0,0"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Статус заявки:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="114"/>
                    <Label x:Name="claimStatusLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="5,0,0,0"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <Label Content="Номер договора:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="136" Margin="40,43,0,0"/>
        <Label Content="Статус договора" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="257" Margin="544,43,0,0"/>
        <Label Content="Тариф:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="59" Margin="544,144,0,0"/>
        <Label Content="Логин учетной записи" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="193" Margin="544,180,0,0"/>
        <Label Content="Пароль учетной записи" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="273" Margin="544,242,0,0"/>
        <TextBox x:Name="abonentLoginTextBox" IsReadOnly="True" HorizontalAlignment="Left" Height="33" Margin="544,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="273"/>
        <TextBox x:Name="abonentPasswordTextBox" IsReadOnly="True" HorizontalAlignment="Left" Height="33" Margin="544,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="273"/>

        <Label Content="Дата заключения договора: " HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Width="214" Margin="38,74,0,0"/>
        <Button Content="К заявке" HorizontalAlignment="Left" Margin="544,437,0,0" VerticalAlignment="Top" Width="273" Height="37" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16" Click="Button_Click"/>
        <ComboBox x:Name="contractStatusComboBox" IsEnabled="False"  HorizontalAlignment="Left" Margin="544,78,0,0" FontSize="16" VerticalAlignment="Top" Width="220" Height="44"/>
        <Button Content="Печать договора" HorizontalAlignment="Left" Margin="544,383,0,0" VerticalAlignment="Top" Width="273" Height="37" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16"/>
        <Label x:Name="contractNumberLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="181,43,0,0"/>
        <Label x:Name="tariffLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="608,144,0,0"/>
        <Label x:Name="contractDateLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="31" Margin="257,78,0,0"/>
        <Button Content="Оформить договор" HorizontalAlignment="Left" Margin="546,333,0,0" VerticalAlignment="Top" Width="273" Height="37" Background="#FF4F6DD3" Foreground="White" FontWeight="Bold" FontFamily="Arial" FontSize="16" Click="Button_Click_1"/>
    </Grid>
</Window>
