<Window x:Class="WpfApp1.ClientVerbose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ClientVerbose" Height="497.711" Width="1040.723" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <GroupBox x:Name="ClaimGroupBox" Header="Клиент" HorizontalAlignment="Left" Height="422" Margin="10,10,0,0" VerticalAlignment="Top" Width="791" FontSize="16">
            <StackPanel>
                <DockPanel>
                    <StackPanel Margin="0,0,5,0" MaxWidth="450">
                        <DockPanel Margin="0,16,0,0">
                            <Label Content="ФИО:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="49"/>
                            <Label x:Name="fioLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Телефон:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="80"/>
                            <Label x:Name="phoneLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Email:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="62" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-0.613"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Label Name="emailLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="34" Width="11"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Дата рождения:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="133"/>
                            <Label x:Name="dateOfBirthLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Место жительства:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="147"/>
                            <TextBox x:Name="placeOfResidenceLabel" IsReadOnly="True" HorizontalAlignment="Left" Height="127" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" FontSize="16" BorderBrush="White" AcceptsReturn="True"/>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel>
                        <DockPanel>
                            <Label Content="Серия паспорта:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="131"/>
                            <Label Name="passportSeriesLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Номер паспорта:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="143"/>
                            <Label Name="passportNumberLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Паспорт выдан:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="125"/>
                            <TextBox Name="issuedByLabel" IsReadOnly="True" HorizontalAlignment="Left" Height="91" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" FontSize="16" BorderBrush="White" AcceptsReturn="True"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Дата выдачи:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="109"/>
                            <Label Name="issueDateLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="Код подразделения:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="161"/>
                            <Label Name="departmentCodeLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                        </DockPanel>
                    </StackPanel>
                </DockPanel>
                <DockPanel>
                    <StackPanel Margin="0,0,200,0">
                    <DockPanel>
                        <Label Content="Логин абонента:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="133"/>
                        <Label Name="abonentLoginLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Пароль абонента:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="143"/>
                        <Label Name="abonentPasswordLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                    </DockPanel>
                </StackPanel>
                <DockPanel>
                    <Label Content="Статус" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="73"/>
                    <ComboBox x:Name="statusComboBox" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="178" Height="31"/>
                </DockPanel>
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <Button x:Name="saveChangesButton" Content="Сохранить изменения" HorizontalAlignment="Left" Margin="825,21,0,0" VerticalAlignment="Top" Width="187" Height="48" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Click="saveChangesButton_Click"/>
        <Button Content="Закрыть просмотр" HorizontalAlignment="Left" Margin="825,87,0,0" VerticalAlignment="Top" Width="187" Height="47" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Click="Button_Click"/>

    </Grid>
</Window>
