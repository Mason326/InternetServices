<Window x:Class="WpfApp1.CreateClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Создание клиента" Height="667.6" Width="987" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid Margin="0,4,-0.2,-4.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="604*"/>
            <ColumnDefinition Width="377*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="fioTextBox" HorizontalAlignment="Left" Margin="33,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" Height="29" PreviewTextInput="fioTextBox_PreviewTextInput" PreviewKeyUp="fioTextBox_PreviewKeyUp"/>
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="28,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="46"/>
        <TextBox x:Name="phoneTextBox" HorizontalAlignment="Left" Margin="33,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Height="28" PreviewKeyUp="phoneTextBox_PreviewKeyUp" GotFocus="phoneTextBox_GotFocus" GotMouseCapture="phoneTextBox_GotMouseCapture"/>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="28,60,0,0" VerticalAlignment="Top" FontSize="16" Height="31" RenderTransformOrigin="0.402,0.551" Width="73"/>
        <Button x:Name="createClientButton" Content="Создать клиента" HorizontalAlignment="Left" Height="36" Margin="11,30,0,0" VerticalAlignment="Top" Width="325" RenderTransformOrigin="0.458,-0.148" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Grid.Column="1"/>
        <Button x:Name="inClaimButton" Content="В заявку" HorizontalAlignment="Left" Height="36" Margin="11,143,0,0" VerticalAlignment="Top" Width="325" RenderTransformOrigin="0.458,-0.148" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Click="inClaimButton_Click" Grid.Column="1"/>
        <Button x:Name="editClientButton" Content="Редактировать клиента" HorizontalAlignment="Left" Height="36" Margin="11,84,0,0" VerticalAlignment="Top" Width="325" RenderTransformOrigin="0.458,-0.148" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Grid.Column="1"/>
        <DataGrid x:Name="clientsDG" Margin="10,415,10,3.2" AutoGenerateColumns="False" SelectionChanged="clientsDG_SelectionChanged" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding full_name}" Width="70" />
                <DataGridTextColumn Header="Телефон" Binding="{Binding phone_number}" Width="70" />
                <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="70" />
                <DataGridTextColumn Header="Адрес проживания" Binding="{Binding place_of_residence}" Width="120" />
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding birthdate}" Width="90" />
                <DataGridTextColumn Header="Логин абонента" Binding="{Binding subscriber_login}" Width="90" />
                <DataGridTextColumn Header="Пароль абонента" Binding="{Binding subscriber_password}" Width="90" />
                <DataGridTextColumn Header="Серия паспорта" Binding="{Binding passport_series}" Width="50" />
                <DataGridTextColumn Header="Номер паспорта" Binding="{Binding passport_number}" Width="64" />
                <DataGridTextColumn Header="Кем выдан" Binding="{Binding issued_by}" Width="100" />
                <DataGridTextColumn Header="Дата выдачи" Binding="{Binding issue_date}" Width="120" />
                <DataGridTextColumn Header="Код подразделения" Binding="{Binding department_code}" Width="120" />
                <DataGridTextColumn Header="Статус клиента" Binding="{Binding client_status}" Width="120" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" Margin="208,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Height="28"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="202,60,0,0" VerticalAlignment="Top" FontSize="16" Height="31" RenderTransformOrigin="0.402,0.551" Width="221"/>
        <GroupBox Header="Паспорт" HorizontalAlignment="Left" Height="171" Margin="30,226,0,0" VerticalAlignment="Top" Width="558" FontSize="16">
            <StackPanel Margin="0,0,12.4,0.4">
                <DockPanel LastChildFill="False">
                    <Label Content="Серия" Margin="0,10,0,0" />
                    <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="-8,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="27"/>
                    <TextBox x:Name="passportSeriesTextBox" DockPanel.Dock="Left" Margin="0,10,10,0" Width="93" Height="26"/>
                    <Label Content="Номер" Margin="0,10,5,0"/>
                    <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="-13,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="27"/>
                    <TextBox x:Name="passportNumberTextBox" DockPanel.Dock="Left" Margin="0,10,0,0" Width="133" Height="27"/>
                </DockPanel>
                <DockPanel LastChildFill="False">
                    <Label Content="Кем выдан" Margin="0,10,5,0" />
                    <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="-13,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="27"/>
                    <TextBox x:Name="issuedByTextBox" DockPanel.Dock="Left" Margin="0,10,10,0" Width="378" Height="37"/>
                </DockPanel>
                <DockPanel LastChildFill="False">
                    <Label Content="Дата выдачи" Margin="0,10,5,0"/>
                    <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="-13,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="27"/>
                    <DatePicker Height="31" Width="145" Margin="0,10,5,0"/>
                    <Label Content="Код подразделения" Margin="0,10,5,0"/>
                    <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="-13,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="27"/>
                    <TextBox x:Name="departmentCodeTextBox" DockPanel.Dock="Left" Margin="0,10,10,0" Width="93" Height="26"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <Button Content="В меню" HorizontalAlignment="Left" Height="36" Margin="11,195,0,0" VerticalAlignment="Top" Width="325" RenderTransformOrigin="0.458,-0.148" Click="Button_Click" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Grid.Column="1"/>
        <Label Content="Дата рождения" HorizontalAlignment="Left" Margin="440,61,0,0" VerticalAlignment="Top" FontSize="16" Height="31" RenderTransformOrigin="0.402,0.551" Width="131"/>
        <TextBox x:Name="placeOfResidenceTextBox" HorizontalAlignment="Left" Margin="33,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="555" Height="28"/>
        <Label Content="Место жительства" HorizontalAlignment="Left" Margin="28,113,0,0" VerticalAlignment="Top" FontSize="16" Height="31" RenderTransformOrigin="0.402,0.551" Width="146"/>
        <DatePicker x:Name="dateOfBirthDatePicker" HorizontalAlignment="Left" Margin="445,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.094,0.323" Width="143" Height="28"/>
        <TextBox HorizontalAlignment="Left" Margin="11,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="322" Height="29" Grid.Column="1"/>
        <Label Content="Поиск по ФИО и серии и номеру паспорта" HorizontalAlignment="Left" Margin="6,311,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="327" Grid.Column="1"/>
        <Label Content="Статус клиента:" HorizontalAlignment="Left" Margin="11,236,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="136" Grid.Column="1"/>
        <ComboBox IsEnabled="False" x:Name="clientStatusCombobox" HorizontalAlignment="Left" Margin="11,272,0,0" VerticalAlignment="Top" Width="234" Height="34" Grid.Column="1"/>
        <TextBox x:Name="abonentLoginTextBox" HorizontalAlignment="Left" Margin="31,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Height="28"/>
        <Label Content="Логин абонента" HorizontalAlignment="Left" Margin="26,168,0,0" VerticalAlignment="Top" FontSize="16" Height="31" RenderTransformOrigin="0.402,0.551" Width="133"/>
        <TextBox x:Name="abonentPasswordTextBox" HorizontalAlignment="Left" Margin="206,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="28"/>
        <Label Content="Пароль абонента" HorizontalAlignment="Left" Margin="200,168,0,0" VerticalAlignment="Top" FontSize="16" Height="31" RenderTransformOrigin="0.402,0.551" Width="221"/>
        <Button Content="Сгенерировать" HorizontalAlignment="Left" Margin="411,195,0,0" VerticalAlignment="Top" Width="177" Height="31" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="64,1,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="93,61,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="93,61,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="163,114,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="144,168,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="329,169,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="554,62,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="126,236,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Grid.Column="1"/>
    </Grid>
</Window>
