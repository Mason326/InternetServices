<Window x:Class="WpfApp1.ClaimVerbose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Заявка подробно" Height="405.265" Width="754.146" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <GroupBox x:Name="ClaimGroupBox" Header="Заявка" HorizontalAlignment="Left" Height="379" Margin="10,10,0,0" VerticalAlignment="Top" Width="488" FontSize="16">
            <StackPanel>
                <DockPanel Margin="0,16,0,0">
                    <Label Content="Дата выполнения:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="146"/>
                    <Label x:Name="dateOfExecutionLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Клиент:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="65"/>
                    <Label x:Name="clientLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Адрес монтирования:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="178"/>
                    <TextBox x:Name="mountAddressTextBox" IsReadOnly="True" HorizontalAlignment="Left" Height="116" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" FontSize="16" BorderBrush="White" AcceptsReturn="True"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Менеджер:" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="92"/>
                    <Label x:Name="managerNameLabel" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Статус" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="73"/>
                    <ComboBox x:Name="statusComboBox" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="178" Height="31"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <StackPanel Margin="498,10,14.8,30.2">
            <Button x:Name="saveChangesButton" Content="Сохранить изменения" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="204" Height="48" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Click="saveChangesButton_Click"/>
            <Button x:Name="closeViewButton" Content="Закрыть просмотр" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="204" Height="47" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Click="Button_Click"/>
            <Button x:Name="rereleaseClaimButton" Content="Перевыпустить заявку" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="204" Height="46" Click="Button_Click_1" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="formAContractButton" Content="Оформление договора" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="204" Height="47" Background="#FF4F6DD3" FontFamily="Arial" FontSize="16" FontWeight="Bold" Foreground="White" Click="formAContractButton_Click" />
        </StackPanel>

    </Grid>
</Window>
