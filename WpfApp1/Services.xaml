<Window x:Class="WpfApp1.Services"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window11" Height="484.4" Width="724.8" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <TextBox TabIndex="1" x:Name="serviceTextBox" HorizontalAlignment="Left" Height="84" Margin="488,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Label Content="Услуга" HorizontalAlignment="Left" Margin="488,24,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.893,-0.273"/>
        <Label Content="Единицы измерения" HorizontalAlignment="Left" Margin="488,132,0,0" VerticalAlignment="Top"/>
        <DataGrid IsReadOnly="True" SelectionMode="Single" x:Name="servicesDG" HorizontalAlignment="Left" Height="403" Margin="10,27,0,0" VerticalAlignment="Top" Width="437" AutoGenerateColumns="False" SelectionChanged="servicesDG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding service_name}" Width="170" />
                <DataGridTextColumn Header="Единицы измерения" Binding="{Binding units}" Width="130" />
                <DataGridTextColumn Header="Цена" Binding="{Binding service_cost}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox TabIndex="2"  x:Name="unitsTextBox" HorizontalAlignment="Left" Height="30" Margin="488,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" PreviewTextInput="TextBox_PreviewTextInput_1"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="488,185,0,0" VerticalAlignment="Top"/>
        <TextBox CommandManager.PreviewExecuted="TextBox_PreviewExecuted" TabIndex="3" x:Name="costTextBox" HorizontalAlignment="Left" Height="30" Margin="488,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" PreviewTextInput="cost_PreviewTextInput" PreviewKeyDown="cost_PreviewKeyDown" MaxLength="12"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="524,22,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="602,130,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Foreground="Red" Content="*" HorizontalAlignment="Left" Margin="517,183,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <StackPanel HorizontalAlignment="Left" Height="182" Margin="488,258,0,0" VerticalAlignment="Top" Width="210">
            <Button x:Name="addServiceButton" Content="Добавить услугу" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="210" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="Button_Click_1"/>
            <Button x:Name="editServiceButton" Content="Редактировать услугу" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="210" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="editServiceButton_Click"/>
            <Button x:Name="deleteServiceButton" Content="Удалить услугу" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="210" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="deleteServiceButton_Click"/>
            <Button x:Name="toMainButton" Content="На главную" HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Top" Width="210" Height="31" Click="Button_Click" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold"/>
            <Button Visibility="Collapsed" x:Name="endEditButton" Content="Завершить редактирование" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="210" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="endEditButton_Click"/>
            <Button Visibility="Collapsed" x:Name="cancelEditButton" Content="Отменить изменения" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="210" Height="31" Background="#FF4F6DD3" Foreground="White" FontFamily="Arial" FontSize="16" FontWeight="Bold" Click="cancelEditButton_Click"/>
        </StackPanel>
        <Label Content="Количество записей:" HorizontalAlignment="Left" Margin="13,441,0,0" VerticalAlignment="Top" Width="125"/>
        <Label x:Name="countRecordsLabel" Content="" HorizontalAlignment="Left" Margin="140,441,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.26,0.246"/>

    </Grid>
</Window>
